@using hmwk50.data
@model ViewModel

<div class="header">
    <h1>History for @Model.ContributorName</h1>
    <h3>Current Balance: @Model.Balance.ToString("C")</h3>
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>

            @foreach (Deposit action in Model.Actions)
            {
                <tr>

                    @if (action.SimchaName == null)
                    {
                        <td>  Deposit</td>
                    }
                    else
                    {
                        <td> Contribution for the @action.SimchaName simcha</td>
                    }


                    <td style="text-align: center; vertical-align: middle;">
                        @action.Date
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @action.Amount
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div style="text-align:center;">
    <a class="btn btn-lg btn-danger" href="/contributors">Back to Contributors</a>
</div>